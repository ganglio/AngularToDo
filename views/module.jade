extends layout

block append stylesheets
	link(href='/css/style.css',rel='stylesheet')

block append scripts
	script(src='http://code.angularjs.org/1.1.2/angular-resource.min.js',type='text/javascript')
	script(src='/js/module.js',type='text/javascript')

block content
	h1 moduleDemo
	div(ng-controller="ModuleCtrl")
		span(ng-repeat='entry in entries', ng-class='{"label-success": entry.success}', class='label', ng-click='successToggle(this)') {{entry.name}} ({{entry.success}})

	form.form-inline(ng-submit='addEntry()')
			.control-group
				.controls
					.input-append
						input.input-medium(type="text", ng-model="formTodoText", placeholder="add new entry here")
						button.btn.btn-success(type="submit")
							i.icon-plus